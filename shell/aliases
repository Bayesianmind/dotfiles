#
# Aliases
#

alias ll='ls -l'
alias ltr='ls -ltr'
alias t='tmux -u'
alias tls='tmux -u ls'
alias ta='tmux -u att'
alias ftfy='fc'
alias vihosts='sudo mvim /etc/hosts'
alias diffed='git diff --cached | pbcopy'
alias pa='ps aux | grep '
alias shuffle='git stash && git pull --rebase && git stash pop'

#
# Git aliases
#

alias g='noglob git'
alias c='gitx -c'
alias gco='git checkout'
alias gca='git commit --amend'


#
# Causes aliases
#

alias anton='ssh aiden@anton -t /home/aiden/bin/remote-tmux'

#
# Chef aliases
#

alias cookup='knife cookbook upload'
alias fresh='git fetch origin && git stash && git rebase origin/master && git stash pop'
alias knife='nocorrect knife'
alias rechef='sudo pkill -USR1 chef-client && tail -f /var/log/chef/client.log'
