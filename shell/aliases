#
# Aliases
#

alias ':q'='echo "\033[31mThis is zsh, not vim\033[0m"'
alias clip='nc localhost 8377'
alias ll='ls -l'
alias ltr='ls -ltr'
alias r='git refresh'
alias rm > /dev/null && unalias rm
alias s='ssh-reagent'
alias t='tmux -u'
alias e='emacsclient -t'
alias e.='e .'
alias e,='e .'
# Old habits
alias vim='emacsclient -t'
alias vi="$(which vim)"

#
# Git aliases
#

if [ -x /usr/local/bin/git ]; then
  alias git='nocorrect /usr/local/bin/git'
fi
alias g='nocorrect git'
alias gp='git add -p'
alias gr='git rebase'
alias gco='git checkout'
alias gca='git commit --amend'
alias gcaf='git commit --amend --no-verify'
alias gcn='git commit --amend --no-verify --no-edit'
alias gst='git status -sb'

alias pep='autopep8 -i '

#
# Global aliases
#
alias -g G=' | grep '

alias land='SKIP_CHECKS=all arc land'
